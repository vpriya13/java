import java.util.Scanner;
public class Arithmetic_Progression {
    public static void main(String args[]) {
          int n,a,d,result=0;
		Scanner sc=new Scanner(System.in);
        n=sc.nextInt();
        a=sc.nextInt();
        d=sc.nextInt();
        result=(n*(2*a+(n-1)*d))/2;
        System.out.println(result);
    }
}
